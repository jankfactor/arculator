{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "ARCULATOR_BUILD_PODULES": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Build",
            "description": "Debug build with symbols and debug logging",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "ARCULATOR_BUILD_PODULES": "ON"
            }
        },
        {
            "name": "no-podules",
            "displayName": "No Podules Build",
            "description": "Build without podule plugins",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-no-podules",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "ARCULATOR_BUILD_PODULES": "OFF"
            }
        },
        {
            "name": "msys2-ucrt64",
            "displayName": "MSYS2 UCRT64",
            "description": "Build using MSYS2 UCRT64 toolchain (Windows)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-ucrt64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "ARCULATOR_BUILD_PODULES": "ON"
            },
            "environment": {
                "PATH": "C:/msys64/ucrt64/bin;$penv{PATH}"
            }
        },
        {
            "name": "msys2-mingw64",
            "displayName": "MSYS2 MINGW64",
            "description": "Build using MSYS2 MINGW64 toolchain (Windows)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-mingw64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "ARCULATOR_BUILD_PODULES": "ON",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            },
            "environment": {
                "PATH": "C:/msys64/mingw64/bin;$penv{PATH}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "msys2-ucrt64",
            "configurePreset": "msys2-ucrt64"
        },
        {
            "name": "msys2-mingw64",
            "configurePreset": "msys2-mingw64"
        }
    ]
}